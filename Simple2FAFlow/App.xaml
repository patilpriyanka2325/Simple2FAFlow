<Application x:Class="Simple2FAFlow.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Simple2FAFlow"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Core/DataTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!--Radio button style-->
            <Style x:Key="CommonRadioButtonStyle" TargetType="RadioButton">
                <Setter Property="Margin" Value="20, 30, 20, 10"/>
                <Setter Property="FontSize" Value="16"/>
            </Style>


            <!--Button style-->
        </ResourceDictionary>
    </Application.Resources>
</Application>
