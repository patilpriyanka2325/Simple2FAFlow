<Window x:Class="Simple2FAFlow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simple2FAFlow"
        mc:Ignorable="d"
        Title="MiniOrange Form" Height="300" Width="380">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>


        <StackPanel Grid.Row="0"
                    Background="#fff0de"
                    Orientation="Horizontal">
            <Button Content="back"/>

            <Label Content="Validate 2FA"
                   FontSize="16"
                   Margin="10"/>
        </StackPanel>


        <StackPanel Grid.Row="1">
            <RadioButton Style="{StaticResource CommonRadioButtonStyle}"
             Content="Google Authenticator">
            </RadioButton>

            <RadioButton Style="{StaticResource CommonRadioButtonStyle}"
              Content="Microsoft Authenticator">
            </RadioButton>
        </StackPanel>


        <StackPanel Grid.Row="2">
            <Button Content="Next"
                    Width='100'/>
        </StackPanel>
    </Grid>
</Window>
