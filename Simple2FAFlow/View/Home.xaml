<UserControl x:Class="Simple2FAFlow.View.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Simple2FAFlow.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <RadioButton Style="{StaticResource CommonRadioButtonStyle}"
                 Content="Google Authenticator">
            </RadioButton>

            <RadioButton Style="{StaticResource CommonRadioButtonStyle}"
                 Content="Microsoft Authenticator">
            </RadioButton>
        </StackPanel>
    </Grid>
</UserControl>
